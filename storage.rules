rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Images de profil - seul le propriétaire peut modifier
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true; // Tout le monde peut voir les photos de profil
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Images de posts - seul l'auteur peut modifier
    match /citylog/posts/{postId}/{allPaths=**} {
      allow read: if true; // Tout le monde peut voir les images de posts
      allow write: if request.auth != null; // Seuls les utilisateurs connectés peuvent uploader
    }
    
    // Dossier de test - seuls les utilisateurs connectés
    match /test/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Interdire tout le reste
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
